# Page content
function page_head {
	print '<!DOCTYPE html>
<html lang="de">
<head>
	<meta charset="utf-8" />
	<meta name="author" content="savoir_vivre" />
	<meta name=viewport content="width=device-width, initial-scale=1">'
	(( CSSV == 1 )) && print "\t<link rel=\"stylesheet\" type=\"text/css\" href=\"/${CSSF}\" />"
	if [[ -n $WTIT ]]; then
		print "\t<title>${WTIT}${FILETIT:+ | }${FILETIT}</title>"
	else
		print "\t<title>${FILETIT}</title>"
	fi
	print '</head>
<body>'

printf '%s' "<div id=h0>
<a href="/">"
print "${WTIT}" | tr ' ' "\n"
print "</a>
</div>"
print '<div id=con>
<nav>
<dl>
<dt><a href="/00_home/">00_home</a></dt>
<dd><a href="/00_home/archiv.html">archiv.txt</a></dd>
<dt><a href="/01_info/">01_info</a></dt>
<dt><a href="/02_stage/">02_stage</a></dt>
<dd><a href="/02_stage/01_action_in_perception.html">01_action_in_perception.txt</a></dd>
<dd><a href="/02_stage/02_hauntology.html">02_hauntology.txt</a></dd>
<dd><a href="/02_stage/03_exper_geography.html">03_exper_geography.txt</a></dd>
<dd><a href="/02_stage/04_intraaktion.html">04_intraaktion.txt</a></dd>
<dt><a href="/03_code/">03_code</a></dt>
<dt><a href="/04_hypomnemata/">04_hypomnemata</a></dt>
<dd><a href="/04_hypomnemata/III.html">III.txt</a></dd>
<dt><a href="/99_kontakt/">99_kontakt</a></dt>
</dl>
</nav>
<div id="paper">
<article>
'
}

function page_foot {
	print '</article>
</div>
</div>
\t<!-- Page generated by wswsh 1.2 / '"$(print ${SHELL##*/})"' - '"$(LC_ALL=C date)"' -->
</body>
</html>'
}

function gen_site_xml {
	print '<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>'"${WTIT}"'</title>
	<subtitle></subtitle>
	<link href="http://'${WURL}'/"/>
	<link type="application/atom+xml" rel="self" href="http://'${WURL}'/'${RSSDIR}'atom.xml"/>
	<updated>'"${RDAT}"'</updated>
	<author>
		<name>savoir_vivre</name>
	</author>
	<id>http://'"${WURL}"'/</id>
'
}

function xml_content {
	print '\t<entry>
		<title>'"${FILETIT}"'</title>
		<link href="http://'${WURL}'/'${RSSTNOEXT}'.html"/>
		<id>http://'"${WURL}"'/'"${RSSTNOEXT}"'.html</id>
		<updated>'"${RDADAT}"'</updated>
		<summary>'"${RSSDES}"'</summary>
	</entry>
'
}
